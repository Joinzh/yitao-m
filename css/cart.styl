rem(px)
  return px/16rem
html
  font-size 16px
@media screen and (max-width:600px)
  html
    font-size 18px
@media screen and (min-width:640px)
  html
    font-size 20px
@media screen and (max-width:320px)
  html
    font-size 15px
@media screen and (max-width:360px)
  html
    font-size 16px
header
  position fixed
  top 0
  left 0
  width 100%
  height rem(40);
  background #fff
  padding 0 20px
  box-sizing border-box
  border-bottom 1px solid #eee
  text-align center
  line-height rem(40)
  a
    float left
    width rem(30)
    height rem(30)
    background-image url("../images/iconfont-leftarrow.png")
    background-size 100% 100%
    margin-top rem(5)
  button
    float right
    width rem(60)
    height 100%
    border none
    background #fff
    text-align right
    outline none
    border-radius 5px
    line-height rem(40)
.headline
  display flex
  position fixed
  top rem(40)
  left 0
  width 100%
  height rem(30)
  background-color #fff
  padding 0 20px
  box-sizing border-box
  border-bottom 1px solid #eee
  line-height rem(30)
  align-items: center
  input
    float left
    width rem(20)
    height rem(20)
  .remove-goods
    position absolute
    right 20px
    display none
    width rem(60)
    height 100%
    background-color #d81e06
    color #fff
    text-align center
.cart-goods
  padding rem(70) 0 rem(80) 0
  ul
    width 100%
    padding 5px
    box-sizing border-box
    li
      width 100%
      height rem(100)
      display: flex;
      padidng 10px 0
      font-size 12px
      background-color #fff
      border-bottom 1px solid #eee
      border-top 1px solid #eee
      .check
        width 10%
        height 100%
        box-sizing border-box
        float left
        text-align center
        line-height rem(100)
        input
          width rem(20)
          height rem(20)
          border 1px solid #eee
          background-color #fff
      img
        width 30%
        height 100%
        float left
        padding 10px 10px
        box-sizing border-box
      p
        float left
        width 100%
        height rem(50)

      .cart-right
        width 60%
        height 50%
        float right
        span
          width 50%
          height 100%
          float left
        .cart-but
          line-height rem(50)
          width 50%
          height 100%
          float right
          button
            float left
            width rem(20)
            height rem(20)
            background-color #eee
            border 1px solid #eee
          input
            float left
            width rem(20)
            height rem(20)
            box-sizing border-box
            background-color #fff
            border 1px solid #eee
            text-align center





footer
  position fixed
  bottom 0
  left 0
  z-index 99
  box-sizing border-box
  width 100%
  height rem(80)
  background-color #f8f8f8
  .account
    width 100%
    height rem(30)
    background-color #fff
    box-sizing border-box
    border-top 1px solid #eee
    border-bottom 1px solid #eee
    span
      float left
      width 60%
      height 100%
      text-align center
      color #d81e06
      font-weight bold
      line-height rem(30)
    a
      float right
      width 30%
      height 100%
      text-align center
      color #fff
      text-decoration none
      line-height rem(30)
      background-color #d81e06
  ul
    width 100%
    height rem(50)
    padding-top 5px
    text-align center
    li
      display inline-block
      width 18%
      height 100%
      a
        width 100%
        font-size rem(12)
        color #3c3c3c
        text-decoration none
        img
          display block
          margin 0 auto
          width rem(25)
          height rem(25)
