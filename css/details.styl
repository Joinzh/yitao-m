rem(px)
  return px/16rem
body,html
  width 100%
  height 100%
html
  font-size 16px
@media screen and (max-width:600px)
  html
    font-size 18px
@media screen and (min-width:640px)
  html
    font-size 20px
@media screen and (max-width:320px)
  html
    font-size 15px
@media screen and (max-width:360px)
  html
    font-size 16px
header
  position relative
  width 100%
  height rem(40);
  text-align center
  border-bottom 1px solid #eee
  line-height rem(40)
  .retreat
    position absolute
    top rem(8)
    left rem(15)
    display block
    width rem(25)
    height rem(25)
    background-image url("../images/iconfont-leftarrow.png")
    background-size 100% 100%
  ul
    width 100%
    box-sizing border-box
    padding-left rem(30)
    li
      display inline-block
      margin 0 rem(20)
      a
        text-decoration none
        color #3c3c3c
.goodsDetails
  width 100%
  font-size rem(16)
  div
    img
      width 100%
  h1
    width 100%
    padding 0 10px
    box-sizing border-box
    //height rem(30)
  p
    width 100%
    padding 10px 10px
    box-sizing border-box
  span
    float left
    font-size 20px
    font-weight bold
    color #d81e06
    margin rem(10)
    &+span
      font-size 14px
      font-weight normal
      background-color #fff
      color #3c3c3c
      border 1px solid #c1c1c5
      border-radius 5px
      padding 5px 10px
      box-sizing border-box
      float right


footer
  position fixed
  bottom 0
  left 0
  width 100%
  border-top 1px solid #eee
  height rem(50)
  background-color rgba(255,255,255,0.5)
  .footer-left
    float left
    width 50%
    height 100%
    line-height rem(25)
    ul
      width 100%
      height 100%
      text-align center
      li
        display inline-block
        box-sizing border-box
        padding rem(3) rem(10)
        span
          display block
          margin 0 auto
          width rem(15)
          height rem(15)
          img
            width 100%
            height 100%
        a
          font-size 12px
          text-decoration none
          color #3c3c3c

  .footer-right
    float left
    width 50%
    height 100%
    line-height rem(50)
    a
      float left
      display block
      font-size rem(14)
      width 50%
      height 100%
      text-decoration none
      text-align center
      color #fff
    .add-car
      background-color #ffb03f
    .buy
      background-color #f23030


