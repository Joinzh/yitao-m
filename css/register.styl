rem(px)
  return px/16rem
html
  font-size 16px
@media screen and (max-width:600px)
  html
    font-size 18px
@media screen and (min-width:640px)
  html
    font-size 20px
@media screen and (max-width:320px)
  html
    font-size 15px
@media screen and (max-width:360px)
  html
    font-size 16px
body,html
  width 100%
  height 100%
body
  background-color #eeeeee
header
  position relative

  width 100%
  height rem(50)
  background linear-gradient(180deg,#f0f0f0,#e7e7e7)
  border-bottom 1px solid #c1c1c5
  box-shadow 0 1px 5px 1px #d3d3d3
  text-align center
  line-height rem(50)
  span
    position absolute
    top 0
    left rem(20)
    bottom 0
    width rem(60)
    height rem(30)
    margin auto 0
    //padding 0 20px
    line-height rem(30)
    display block
    border 1px solid #c1c1c5
    border-radius 10px
.login
  width 100%
  line-height rem(30)
  p
    padding 0 10px
    font-size  12px
  .phone,.password,.verification
    height rem(40)
    background-color #fff
    line-height rem(40)
    border-bottom 1px solid #c1c1c5
    font-size 12px
    span
      width 15%
      display inline-block
      text-align center
      &:nth-of-type(2)
        width 20%
    input
      width 60%
      height 100%
      padding rem(10)
      box-sizing border-box
      border none
      outline none
    button
      width 20%
      box-sizing border-box
      border 1px solid #c1c1c5
      padding 5px
      font-size 12px
      border-radius 5px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
.Verify-Registration
  position relative
  width 90%
  margin 10px auto
  text-align center
  background-color #dddddd
  border 1px solid #cfcfcf
  box-sizing border-box
  border-radius 5px
  color #b5aaaa
  line-height rem(50)
  .green
    position absolute
    left 0
    top 0
    width 0
    height 100%
    color #fffacd
    background-color #00bb00
  .rectangle
    position absolute
    left 0
    top 0
    width rem(50)
    height rem(50)
    background-color #fff
    border-radius 5px
    box-sizing border-box
footer
  padding 10px 10px
  text-align center


