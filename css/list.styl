rem(px)
  return px/16rem
body,html
  width 100%
  height 100%
html
  font-size 16px

@media screen and (max-width:600px)
  html
    font-size 18px
@media screen and (min-width:640px)
  html
    font-size 20px
@media screen and (max-width:320px)
  html
    font-size 15px
@media screen and (max-width:360px)
  html
    font-size 16px
body
  background-color #eee
header
  width 100%
  height 9%
  border-bottom 1px solid #c1c1c5
  .search
    width 100%
    height rem(60)
    text-align center
    box-sizing border-box
    background-color #f8f8f8
    border-bottom 1px solid #ebebeb
    padding rem(10) rem(10)
    .classify
      width 10%
      height rem(35)
      float left
      background-image: url(../images/go.png)
      background-color #3c3c3c
      background-size 100% 100%
      border none
      border-radius 5px 0 0 5px
    .search-txt
      width 80%
      padding 0 rem(20)
      height rem(35)
      float left
      box-sizing border-box
      border 2px solid #3c3c3c
    .search-but
      width 10%
      height rem(35)
      float left
      background-image: url(../images/search.png)
      background-color #3c3c3c
      background-size 100% 100%
      border none
      border-radius 0 5px 5px 0
.goods-list
  position fixed
  top(60)
  box-sizing border-box
  left 0
  width 25%
  height 100%
  background-color #3c3c3c
  text-align center
  font-size 12px
  h1
    margin 1rem
    color #fff
  >ul
    height 100%
    li
      line-height rem(40)
      box-sizing border-box
      border-right 5px solid transparent
      a
        display inline-block
        width 100%
        height 100%
        color #ffffff
.CategoryProducts
  position fixed
  top 9%
  right 0
  width 75%
  height 91%
  //border 1px solid #3c3c3c
  box-sizing border-box
  overflow auto
  ul
    width 100%
    font-size 12px
    //overflow hidden
    li
      position relative
      width 48%
      height rem(200)
      float left
      margin 1%
      border 1px solid #d81e06
      box-sizing border-box
      border-top 5px solid #3c3c3c
      i
        position absolute
        top -4px
        left -3px
        display block
        width rem(30)
        height rem(30)
        background-image url("../images/HOT.png")
        background-size 100% 100%
      a
        width 100%
        height 100%
        color #494949
       img
        width 100%
        height rem(120)
       p
        width 100%
        height rem(40)
        overflow auto
       span
         display inline-block
         margin-top 10px
         padding 2px 5px
         background-color #d81e06
         color #fff
.top
  width rem(50)
  height rem(50)
  position fixed
  bottom 10%
  right 2%
  background-image url("../images/top.png")
  background-size 100% 100%
  z-index 100

